{
    "compilerOptions": {
        "outDir": "./dist",
        "lib": ["es6"],
        "target": "es6",
        "module": "CommonJS",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
    },
    "include": ["./server.ts", "./src/**/*", "__tests__"],
    "exclude": ["./node_modules"],
    "types": ["jest","node"]
}